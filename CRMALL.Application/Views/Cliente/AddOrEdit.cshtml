@model CRMALL.Domain.Entities.Cliente

<div class="card-header">
    <div class="row">
        <div class="col-12">
            <h3 class="card-title">Adicionar cliente</h3>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active cliente-tab" id="dadosgerais-tab" data-toggle="tab" href="#dadosgerais" role="tab" aria-controls="dadosgerais" aria-selected="true">Dados gerais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link cliente-tab" id="endereco-tab" data-toggle="tab" href="#endereco" role="tab" aria-controls="endereco" aria-selected="false">Endereço</a>
                </li>
            </ul>
            <form class="needs-validation" id="frm-cliente" novalidate>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="dadosgerais" role="tabpanel" aria-labelledby="dadosgerais-tab">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="card-body">
                            <div class="row">

                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="Nome" id="nome"></label>
                                        <input asp-for="Nome" class="form-control form-control-sm" required />
                                        <div class="invalid-feedback">
                                            Por favor informe o nome.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="DataNascimento"></label>
                                        <input asp-for="DataNascimento" type="date" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask />
                                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="form-group">
                                    <label asp-for="Sexo"></label>
                                    <select asp-for="Sexo" class="form-control form-control-sm">
                                        <option selected value="0">Selecione</option>
                                        <option value="1">Masculino</option>
                                        <option value="2">Feminino</option>
                                    </select>
                                    <span asp-validation-for="Sexo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="tab-pane fade" id="endereco" role="tabpanel" aria-labelledby="endereco-tab">
                        @if (Model.Endereco != null)
                        {
                            <input type="hidden" asp-for="Endereco.Id" />
                        }

                        <div class="card-body">
                            <div class="row">
                                <div class="col-2">
                                    <div class="form-group">
                                        <label asp-for="Endereco.TipoEndereco"></label>
                                        <select asp-for="Endereco.TipoEndereco" class="form-control form-control-sm">
                                            <option selected value="0">Selecione</option>
                                            <option value="1">Residencial</option>
                                            <option value="2">Comercial</option>
                                            <option value="3">Entrega</option>
                                        </select>
                                        <span asp-validation-for="Endereco.TipoEndereco" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Cep"></label>
                                        <input asp-for="Endereco.Cep" class="form-control form-control-sm" data-inputmask='"mask": "99999-999"' data-mask />
                                        <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Logradouro"></label>
                                        <input asp-for="Endereco.Logradouro" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Numero"></label>
                                        <input asp-for="Endereco.Numero" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Complemento"></label>
                                        <input asp-for="Endereco.Complemento" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Bairro"></label>
                                        <input asp-for="Endereco.Bairro" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Cidade"></label>
                                        <input asp-for="Endereco.Cidade" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <label asp-for="Endereco.Estado"></label>
                                        <input asp-for="Endereco.Estado" class="form-control form-control-sm" />
                                        <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="button" class="btn btn-secondary prevtab"><i class="fa fa-arrow-left" style="margin-right:5px"></i>Voltar</button>
                        <button type="button" class="btn btn-secondary nexttab">Continuar<i class="fa fa-arrow-right" style="margin-left:5px"></i></button>
                    </div>
                </div>

                <div class="row margin-top-10px pull-right">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-responsive"><i class="fas fa-check"></i> Cadastrar</button>
                        <a class="btn btn-danger btn-responsive" asp-controller="Cliente" asp-action="Index"><i class="fas fa-times"></i> Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/dist/js/cliente/save.js" asp-append-version="true"></script>
}

